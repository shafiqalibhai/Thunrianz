<?xml version="1.0" encoding="utf-8"?>
<dkinstall version="0.3">
	<drabots>
		<drabot>
			<id>smtpmail</id>
			<name>SMTP mailer</name>
			<author>The Lanius CMS Team</author>
			<creationDate>2007/11/29</creationDate>
			<license>http://www.gnu.org/copyleft/gpl.html GNU/GPL</license>
			<version>0.1</version>
			<group>mail</group>
			<description>SMTP mailer</description>
			<requirements>
				<core>
					<version>0.4</version>
				</core>
			</requirements>
			<params>
				<param name="debug_level" type="integer" default="1" label="_SMTP_DEBUG_LEVEL" />
				<param name="server" type="text" default="localhost" required="1" label="_SMTP_SERVER" />
				<param name="port" type="integer" default="25" label="_SMTP_PORT" />
				<param name="username" type="text" default="" label="_SMTP_AUTH_USER" />				
				<param name="password" type="password" default="" label="_SMTP_AUTH_PASSWORD" />
				<param name="from" type="text" default="" label="_SMTP_FROM" />
			</params>
		</drabot>
	</drabots>
</dkinstall>